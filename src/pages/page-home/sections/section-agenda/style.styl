:host
  display block
  box-sizing: border-box
  padding: 80px 0 60px 0
  background-color: #fff
  width: 100vw
  background-color: white

*
  padding: 0
  margin: 0

.agenda-content
  position: relative
  width: 100vw
  @media screen and (min-width: 1023px)
    width: 80%
    margin: auto

  a[name]
    position absolute

  a
    text-decoration: none    
    cursor pointer


  .item
    display: flex
    margin-bottom: 1rem
    

  .time
    flex-basis: 8rem
    display: flex
    flex-direction: column
    align-items: center
    position relative
    
    h2,h4
      color: #4285f4
    h4
      font-size: 0.75rem
      position absolute
      top: 1.75rem

  .detail
    display: flex
    flex-direction: column
    max-width: 60%

    .topic-detail
      margin-bottom: 1.5rem

    .topic-title
      color: #333

    .duration
      margin-top: 0.25rem
      color: #777

    .topic
      margin-top: 0.75rem
      color: #777

.modal
  position: fixed
  height: 100vh
  width 100%
  max-height: 30rem
  max-width: 30rem
  left: 50%
  top: 50%
  transform: translate(-50%,-50%)
  opacity: 1
  transition: 0.3s transform, 0.3s opacity
  will-change: transform, opacity
  background-color: white
  border-radius: 0.25rem
  z-index 100
  box-shadow: 0px 0.5rem 2rem #00000044
  color: #333
  overflow: hidden
  display: flex
  flex-direction: column

.modal.hidden
  opacity 0
  transform: translate(-50%,50%)
  will-change: transform, opacity
  pointer-events: none


.modal > header
  padding 1rem
  background-color: #00ccaa
  background: linear-gradient(to right,#00ccaa, #4285f4);

.speaker-photo
  width: 8rem
  height: 8rem
  background-color: #ddd
  border-radius: 50%
  margin: auto

.speaker-main-detail
  text-align: center

.speaker-name
  color: #ffffff
  margin-top: 0.5rem
.speaker-position
  color: #ffffff
  font-weight: lighter

.close-button
  position absolute
  top: 1rem
  right: 0

.close-button > a
  padding: 1rem
  cursor pointer

.close-button > a:hover
  opacity 0.8

.speaker-details
  padding: 1rem
  flex-grow: 1