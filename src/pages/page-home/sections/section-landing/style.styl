@import '../../../../styles/general/button.styl'

:host
  display block
  box-sizing: border-box
  height: calc(100vh)
  max-width: 100vw
  overflow hidden

.parallax
  width: 100vw

.parallax::after
    content: " ";
    width: 75%;
    height: 5rem;
    position: absolute;
    bottom: -6px;
    right: -25%;
    background-color: #ffffff55;
    border-radius: 0.5rem/0.25rem;
    transform: skewX(-45deg);

.parallax::before
    content: " ";
    width: 75%;
    z-index: 1
    width: 25%;
    height: 10rem;
    position: absolute;
    bottom: -6px;
    right: -25%;
    background-color: white
    border-radius: 0.5rem/0.25rem;
    transform: skewX(-45deg);


.overlay
  width: 100vw
  height: 100vh
  position: absolute
  top: 0
  // background-color: #00CCAAAA
  background-color: #4285f4AA
  display: flex
  justify-content: center
  align-items: center

.content
  width: 100vw
  height: calc(100vh - 64px)
  position: absolute
  top: 64px
  display: flex
  justify-content: center
  align-items: center

.overlay-content
  width: 80%
  transform: translateY(0rem)
  transition: transform 0.5s ease-out, opacity 0.3s
  opacity: 1

.landing-title
  color: white
  // font-size: 2rem (small)
  // margin-bottom: 0.5rem
  font-weight: lighter
  font-size: calc(1rem + 2vw)
  padding: none
  width: 80vw
  max-width 48rem

.landing-subtitle
  color: white
  // font-size: 3.34rem  (small)
  font-size: calc(2.75rem + 4vw)
  margin: 0

.slideshow-banner
  width: 100vw
  height: 100vh

.button
  background white
  button()
  // normalize bottom padding; bottom padding appears larger
  padding: 16px 16px 11px 16px
  color: #4285f4


lazy-picture
  position: absolute
  transition: opacity .5s ease-in
  opacity: 1
  top: 0
  left: 0

lazy-picture + lazy-picture
  opacity: 0