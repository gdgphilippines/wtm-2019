:host
  display block
  box-sizing: border-box
  background-color: white
  width: 100vw
  background-image: linear-gradient(5deg, #fff 25%, #1cb6e9 calc(25% + 1px));
  background-position: 0rem 0vh;
  background-repeat: no-repeat

.map
  display: flex
  align-items: center
  justify-content: center
  height: 100vh
  background-image: linear-gradient(-5deg, transparent 25%, #1ce9b6 calc(25% + 1px));
  background-repeat: no-repeat
  background-position: 0rem -25vh
  @media screen and (min-width: 800px)
    padding: 0rem 4rem

#map
  box-shadow: 0px 2px 0.5rem #00000022
  background-color: #ddd